package Logic;

/**
 * Class to hold information for an ingredient.
 * @author talamihg
 *
 */
public class Ingredient {

	public String name;
	public Double measure;
	public String type;
	public Double nutritionValue;

	/**
	 * Constructor for an ingredient object.
	 * @param name
	 * @param measure
	 * @param type
	 * @param nutritionValue
	 */
	public Ingredient(String name, Double measure, String type, Double nutritionValue) {
		this.name = name;
		this.measure = measure;
		this.type = type;
		this.nutritionValue = nutritionValue;
	}
}
